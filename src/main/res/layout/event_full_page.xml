<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor = "1.5"
    tools:context=".MainActivity" >
    
    <LinearLayout
        android:id="@+id/EventPage_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/EventPage_eventImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_weight="3"
            android:src="@drawable/img_eventplaceholder2"/>
		
		<LinearLayout
		    android:layout_width= "match_parent"
		    android:layout_height = "wrap_content"
		    android:background="@color/light_grey" 
		    android:orientation="vertical">
		    
			<include layout="@layout/event_page_banner"/>
	
	        <!-- Text Fields and Labels -->
	
	        <TextView
	            android:id="@+id/EventPage_eventOrgsLabel"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="2dp"
	            android:text="Organisers"
	            android:textColor="@android:color/darker_gray"
	            tools:ignore="HardcodedText" />
	
	
	        <TextView
	            android:id="@+id/EventPage_eventOrgs"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:padding="2dp"
	            android:layout_marginBottom="8dp"
	            android:textSize="16sp"
	            android:text="This is placeholder Text. It is saying hi. Please wave back, but dont feed it. Thank you"
	            tools:ignore="HardcodedText" />
	
	        <TextView
	            android:id="@+id/EventPage_eventTimeLabel"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="2dp"
	            android:text="Time"
	            android:textColor="@android:color/darker_gray" />
	
	        <TextView
	            android:id="@+id/EventPage_eventTime"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:padding="2dp"
	            android:textSize="16sp"
	            android:layout_marginBottom="8dp"
	            android:text="This is placeholder Text. It is saying hi. Please wave back, but dont feed it. Thank you" />
	
	        <TextView
	            android:id="@+id/EventPage_eventVenueLabel"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="2dp"
	            android:text="Venue"
	            android:textColor="@android:color/darker_gray" />
	
	        <TextView
	            android:id="@+id/EventPage_eventVenue"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:padding="2dp"
	            android:textSize="16sp"
	            android:layout_marginBottom="8dp"
	            android:text="This is placeholder Text. It is saying hi. Please wave back, but dont feed it. Thank you" />
	
	        <TextView
	            android:id="@+id/EventPage_eventDetailsLabel"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="2dp"
	            android:text="Details"
	            android:textColor="@android:color/darker_gray" />
	
	
	        <TextView
	            android:id="@+id/EventPage_eventDetails"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:padding="2dp"
	            android:textSize="16sp"
	            android:autoLink="all"
	            android:layout_marginBottom="8dp"
	            android:text="This is placeholder Text. It is saying hi. Please wave back, but dont feed it. Thank you" />
	
	        <TextView
	            android:id="@+id/EventPage_eventsContactLabel"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:padding="2dp"
	            android:text="Event Contact"
	            android:textColor="@android:color/darker_gray" />
	
	        <TextView
	            android:id="@+id/EventPage_eventContact"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:padding="2dp"
	            android:textSize="16sp"
	            android:layout_marginBottom="8dp"
	            android:text="This is placeholder Text. It is saying hi. Please wave back, but dont feed it. Thank you"
                android:autoLink="phone|email|web" />
	        
		    
		</LinearLayout>
		
		
        
        

    </LinearLayout>
    
    
</com.nirhart.parallaxscroll.views.ParallaxScrollView>

